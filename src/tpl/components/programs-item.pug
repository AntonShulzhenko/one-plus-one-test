- var itemClass = ''

each item in programs
  if item.short.premiere
    - itemClass = 'premiere'
  else if item.short.online
    - itemClass = 'online'
  else
    - itemClass = ''
    
  .programs__item
    div(class='program-short ' + itemClass)
      .program-short__time
        if item.short.premiere
          span.sign #{item.short.premiereText}
        else if item.short.online
          span.sign #{item.short.onlineText}
          
        span.time #{item.short.time}
      
      .program-short__container
        a.program-short__preview.play(href="#")
          img(src="img/program-short.png", alt=`${item.short.title}`)
            
        .program-short__content
          a.program-short__title(href="#") #{item.short.title}
          
          .program-short__tags
            each tag in item.short.tags
              a(class=tag.online ? 'on-line' : '', href="#") #{tag.tag}
            
          p.program-short__excerpt #{item.short.excerpt}
      
    .program-full
      .program-full__time
        .program-full__date
          span.day #{item.full.day}
          span.date #{item.full.date}
        
        .program-full__time-switcher
          a.control.before(href="#")
            svg(xmlns="http://www.w3.org/2000/svg", xmlns:xlink="http://www.w3.org/1999/xlink", width="23", height="13", viewBox="0 0 23 13")
              image(id="Shape_1_copy", data-name="Shape 1 copy", width="23", height="13", xlink:href="data:img/png;base64,")

          span.time #{item.full.time}
          
          a.control.after(href="#")
            svg(xmlns="http://www.w3.org/2000/svg", xmlns:xlink="http://www.w3.org/1999/xlink", width="23", height="13", viewBox="0 0 23 13")
              image(id="Shape_1_copy_3", data-name="Shape 1 copy 3", width="23", height="13", xlink:href="data:img/png;base64,")

      .program-full__container
        .program-full__video
          //- iframe(width="100%", src="//ovva.tv/video/embed/eRIGWNJt", frameborder="0", allowfullscreen)
          
        .program-full__content
          a.program-full__title(href="#") #{item.full.title}
          p.program-full__sub-title #{item.full.subTitle}
          
          .program-full__cat
            each cat in item.full.cat
              a(href="#") #{cat}
          
          p.program-full__excerpt #{item.full.excerpt}
          
          .program-full__tags
            each tag in item.full.tags
              a(href="#") #{tag}
      
      button.program-full__close X
