doctype
html(lang="ru")
  include partials/head
    
  body
    include partials/header
    
    main.main
      section.news
        .news__container
          .calendar
            each item in calendar
              div(class=item.active ? 'calendar__item active' : 'calendar__item')
                a.calendar__link(href="#")
                  span.calendar__day #{item.day}
                  span.calendar__date #{item.date}
                  
          .news__filter
            each item in newsFilter
              a(class=item.active ? 'active' : '', href="#") #{item.link}
          
      
      include sections/popular
    
    include partials/footer
  
  script(src="js/vendor.js")
  script(type="text/javascript", src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js")
  script(src="js/main.js")
