doctype
html(lang="uk")
  include partials/head
    
  body
    include partials/header
    
    main.main
      section.news
        .news__container
          include components/calendar
                  
          .news__filter
            each item in newsFilter
              a(class=item.active ? 'active' : '', href="#") #{item.link}
              
          .programs
            include components/programs-item
      
      include sections/popular
    
    include partials/footer
  
  script(src="js/vendor.js")
  script(type="text/javascript", src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js")
  script(src="js/main.js")
